Bootstrap: docker
From: continuumio/miniconda3:4.12.0

%environment 
    export PATH=~/.local/bin:$PATH

%files
    requirements.txt

%post
    apt-get update -y
    apt-get install -y python3
    apt-get install -y python3-pip
    pip install -r requirements.txt -f https://download.pytorch.org/whl/torch_stable.html 

